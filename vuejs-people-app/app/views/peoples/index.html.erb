<div id="app">
  <h2>Add a person: </h2>
  <div>
   Name: <input type="text" v-model="newPersonName">
   Bio: <input type="text" v-model="newPersonBio">
   <button v-on:click="addPerson()">Add Person</button>
  </div>

  <h2>Interesting People?</h2>
  <div v-for="people in peoples">
    <h3 v-on:click="toggleBio(people)"> {{ people.name }}</h3>
    <h5 v-="people.bioVisible"> {{ people.bio }}
    <button v-on:click="deletePerson(person)"> Delete </button></h5>
  </div>

  <h4>Total number of people: {{ people.length }}</h4>
</div>